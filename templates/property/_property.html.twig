<div class="card mb-4">
    {% if property.filename %}
        <img src="{{vich_uploader_asset(property, 'imageFile') | imagine_filter('thumb')}}" alt="card-img-top">
    {% else %}
        <img src="{{'/images/properties/empty.jpg' | imagine_filter('thumb')}}" alt="card-img-top">
    {% endif %}
    
    <div class="card-body">
        <h3 class="card-title">
            <a href="{{path('app_property_show', {slug: property.slug, id:property.id})}}">
                {{property.title}}
            </a>
        </h3>
        <p class="card-text">{{property.surface}} m2 - {{property.city}} ({{property.postalCode}})</p>
        <div class="text-primary" style="font-size:2rem; font-weight: bold;">
            {{property.formatedPrice}} â‚¬
        </div>
    </div>
</div>
